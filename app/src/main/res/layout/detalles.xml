<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTituloNoticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News"
        android:textSize="24sp"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/imgNoticia"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvTituloNoticia"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvContenidoNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgNoticia"
        android:text="Contenido de la noticia aquÃ­..."
        android:padding="16dp" />

    <include layout="@layout/navegacion" />
</RelativeLayout>