<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration"
            android:textSize="24sp"
            android:textColor="#1A1A1A"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Sección Retroalimentación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retroalimentanos"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Item Comentarios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nos encantaría escuchar tus comentarios"
                android:textSize="16sp"
                android:textColor="#666666" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_brightness_7_24"
                app:tint="#999999" />
        </LinearLayout>

        <!-- Item Reportar Error -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reportar Error"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_brightness_7_24"
                app:tint="#999999" />
        </LinearLayout>

        <!-- Sección Políticas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Políticas"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <!-- Política de Privacidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Políticas de Privacidad"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_brightness_7_24"
                app:tint="#999999" />
        </LinearLayout>

        <!-- Términos y Condiciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Términos y Condiciones"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_brightness_7_24"
                app:tint="#999999" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>